<div class="flex justify-center">
  <div class="mt-16 px-8 py-4 w-96 bg-white rounded-lg shadow-lg h-fit">
    <h2 class="text-xl font-bold text-center text-gray-700">Welcome toBudget Tracker app</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="my-4">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true, class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
      </div>
      <div class="my-4">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
      </div>
      <div class="my-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
      </div>
      <div class="my-4">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
      </div>
      <button type="submit" class=" w-full bg-blue-500 hover:bg-blue-100 rounded-lg py-2 text-center font-bold cursor-pointer mt-8 text-white">
        Sign up
      </button>
    <% end %>
  </div>
</div>