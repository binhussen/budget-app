<div class="d-flex flex-column justify-content-between align-items-between">
  <%= render 'shared/errors', obj: @payment %>

  <%= form_with model: @payment, url: category_payments_path, class: "d-flex flex-column justify-content-between align-items-between" do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :amount, class: "form-label" %>
      <%= form.number_field :amount, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.collection_select(:category_ids, current_user.categories, :id, :name, {}, { multiple: true, size: 7, class: "form-select" }) %>
    </div>

    <%= form.submit class: "btn btn-primary" %>

  <% end %>

  <%= link_to "Back", category_path(@category), class: "btn btn-secondary mt-2" %>
</div>